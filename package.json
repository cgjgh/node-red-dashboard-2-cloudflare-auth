{
  "name": "@cgjgh/node-red-dashboard-2-cloudflare-auth",
  "version": "0.1.9",
  "description": "When used with Cloudflare Access authentication, this plugin will pass the email address of an authenticated user into the _client object under _client.user.email",
  "main": "src/index.js",
  "scripts": {
    "predev": "cd .node-red-data && npm install -f ../",
    "dev": "node-red --userDir .node-red-data --settings settings.js"
  },
  "node-red": {
    "version": ">=3.1",
    "plugins": {
      "node-red-dashboard-2-cloudflare-auth": "src/index.js"
    }
  },
  "engines": {
    "node": ">=16.20"
  },
  "keywords": [
    "node-red",
    "node-red-dashboard",
    "cloudflare",
    "cloudflare-access",
    "cloudflare-tunnels",
    "auth",
    "authentication"
  ],
  "dependencies": {
    "@flowfuse/node-red-dashboard": "^1.10"
  },
  "devDependencies": {
    "node-red": "^3.1",
    "nodemon": "3.1.0"
  },
  "license": "AGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cgjgh/node-red-dashboard-2-cloudflare-auth.git"
  },
  "bugs": {
    "url": "https://github.com/cgjgh/node-red-dashboard-2-cloudflare-auth/issues"
  },
  "homepage": "https://github.com/cgjgh/node-red-dashboard-2-cloudflare-auth#readme",
  "publishConfig": {
    "access": "public"
  }

}